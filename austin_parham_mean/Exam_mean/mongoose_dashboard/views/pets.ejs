<html>
<head>
	<script type="text/javascript">
		$(document).ready(function(){
			$('#red').click(function(){
				$('#red').hide();
			});
		});
	</script>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<script type="text/javascript" src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
</head>
<body>
<h1><%= pet.name %></h1>
<h3>Type: <%= pet.type %></h3>
<h3>Description: <%= pet.description %></h3>
<h3>Skills:</h3>
<% for(var skill of pet.skills){ %>
	<h4><%= skill %></h4>
<% } %>
<h3>Likes: <%= pet.likes %></h3>
<a id="red" href="/pets/<%= pet.id %>/like"><button class="btn btn-primary">Like</button></a> | <a href="/pets/destroy/<%= pet.id %>"><button class="btn btn-success">Adopt!</button></a><br>
<a href="/">Home</a>
</body>
</html>